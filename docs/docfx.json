{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",

  "metadata": [
    {
      "src": [
        {
          "src": "../Booseapp",
          "files": [ "Booseapp.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],

  "build": {

    "content": [
      {
        "src": "docs",
        "files": [
          "**/*.md",
          "toc.yml"
        ]
      }
    ],

    "resource": [
      {
        "files": [ "images/**" ]
      }
    ],

    "template": [
      "styles",
      "modern",
      "default"
    ],

    "output": "_site",

    "globalMetadata": {
      "_appName": "SaifDoc",
      "_appTitle": "SaifDoc",
      "_enableSearch": true,
      "pdf": true,

      "_css": [
        "styles/docfx.css",
        "styles/main.css"
      ],

      "_js": [
        "styles/main.js",
        "styles/docfx.js"
      ]
    }
  }
}
